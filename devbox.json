{
  "packages": [
    "git@latest",
    "nodejs@latest",
    "vscode@latest",
    "vim@latest",
    "bun@latest",
    "rustup@latest",
    "libiconv@latest",
    "openssh@latest",
    "less@latest"
  ],
  "shell": {
    "init_hook": [
      "alias ls='ls --color'"
    ],
    "scripts": {
      "frontend": "cd frontend; bun start",
      "backend": "cd backend; ENABLE_RESET=true ROCKET_LOG_LEVEL='critical' cargo run"
    }
  },
  "env": {
    "BUN_INSTALL": "$PWD/.bun",
    "LS_COLORS":   "di=33",
    "PATH":        "$PATH:$PWD/.bun/bin"
  }
}
